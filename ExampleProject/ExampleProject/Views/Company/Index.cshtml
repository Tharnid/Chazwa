
@using ExampleProject.Controllers
@model IEnumerable<ExampleProject.Models.Company>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@(Html.SSSGridReadOnly<ExampleProject.Models.Company>("MainGrid", "250px")
    .Columns(columns =>
    {
        columns.Bound(c => c.CompanyId);
        columns.Bound(c => c.Name);
        columns.Bound(c => c.CompanyType);
    })
    
    .DataSource(dataSource => dataSource
        .Ajax()
                .Read(read => read.Action("Company_Read", "Company"))
                
                    .Model(model =>
                    {
                        model.Id(c => c.CompanyId);
                    }
                )
    )
)


