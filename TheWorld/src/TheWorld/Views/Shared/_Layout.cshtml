<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>The World</title>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div id="sidebar">
        <img src="img/nnqDG-5L_400x400.png" alt="headshot" class="headshot" />
        <span id="username">
            Han Solo
        </span>
        <ul class="menu">
            <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
        </ul>
    </div>

    <div id="wrapper">
        <div id="main">
            <div>
                <button id="sidebarToggle">Toggle Menu</button>
            </div>
    
            <div>
                @RenderBody()
            </div>

        </div>
        <div id="footer">
            &copy; 2016 The World
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js"></script>

</body>
</html>
