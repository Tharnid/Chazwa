
@{
    ViewBag.Title = "Adv Readme Box";
}

<h2>Adv Readme Box</h2>

<link href="~/Content/PDSA-Readme-Box.css" rel="stylesheet" />

<style>
    .pdsa-readme-box {
        min-height: 18em;
    }
</style>

<div class="row">
    <div class="col-xs-12 col-sm-3">
        <div class="pdsa-readme-box pdsa-readme-box-info">
            <div class="readme-header">
                <i class="fa fa-2x fa-bus"></i>
            </div>
            <div class="readme-body">
                <h1>Free Delivery</h1>
                <p>
                    Order today and we will pay for your shipping. Offer valid on any order over $25.
                </p>
            </div>
            <div class="readme-footer">
                <a href="#">
                    <i class="fa fa-2x fa-plus"></i> Read More...
                </a>
            </div>
        </div>
    </div>

    <div class="col-xs-12 col-sm-3">
        <div class="pdsa-readme-box pdsa-readme-box-danger">
            <div class="readme-header">
                <i class="fa fa-2x fa-file-archive-o"></i>
            </div>
            <div class="readme-body">
                <h1>Free Delivery</h1>
                <p>
                    Order today and we will pay for your shipping. Offer valid on any order over $25.
                </p>
            </div>
            <div class="readme-footer">
                <a href="#">
                    <i class="fa fa-2x fa-plus"></i> Read More...
                </a>
            </div>
        </div>
    </div>
</div>